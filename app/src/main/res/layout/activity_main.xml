<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3CEDF"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:src="@drawable/girisdog"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:text="HOŞ GELDİNİZ"
        android:textColor="#9CB4CC"
        android:textSize="32dp"
        android:textStyle="normal" />

    <Button
        android:layout_width="300dp"
        android:id="@+id/girisbutton"
        android:layout_height="50dp"
        android:backgroundTint="#9CB4CC"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="50dp"
        android:text="GİRİŞ YAP"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#F9F3EE" />
    <Button
        android:layout_width="300dp"
        android:id="@+id/kayitbutton"
        android:layout_height="50dp"
        android:backgroundTint="#9CB4CC"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="15dp"
        android:text="KAYIT OL"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#F9F3EE" />























</LinearLayout>